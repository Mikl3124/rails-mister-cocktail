<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://petitpalaisdaglae-gordes.com/wp-content/uploads/2018/08/cocktail-au-Petit-Palais-dAgla%C3%A9.jpg);">
  <div class="container">
    <h1>Mister Cocktail</h1>
    <p>Make your cocktail!</p>
    <%= link_to 'Ajouter un Cocktail', new_cocktail_path, :class => "btn btn-primary"%>
  </div>
</div>

  <div class="container">
    <h1>Liste des cocktails</h1>
        <% @cocktails.each do |cocktail| %>
        <div class="row justify-content-areound">
          <div class="col-4 mt-4">
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
              <div class= "card-cocktail">
                <div>
                  <h2><%= cocktail.name %></h2>

                </div>
                <div>
                  <%= link_to 'Destroy', cocktail_path(cocktail), method: :delete, data: { confirm: 'Are you sure?' } %> |
                  <%= link_to 'Voir', cocktail_path(cocktail) %>
                </div>
              </div>
            </div>
          </div
              <% end %>
        </div>
  </div>


